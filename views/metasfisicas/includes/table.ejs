<table class="table table-bordered mt-4">
  <thead>
    <tr>
      <th scope="col" colspan="2" class="text-center">Metas</th>
      <th scope="col" class="text-center">Constatações</th>
      <th scope="col" class="text-center">Evidências Apresentadas</th>
      <th scope="col" class="text-center">Fontes de Evidências</th>
      <th scope="col" class="text-center">Justificativas</th>
      <th scope="col" class="text-center">Ações</th>
    </tr>
  </thead>
  <tbody>
    <%
      physics_goals.forEach(valuePhys => {
        if(valuePhys.CD_PROCESSO == valueProc.CD_PROCESSO) {
    %>
          <tr>
            <th scope="row" class="text-center"><%= valuePhys.DS_NOME %></th>
            <td class="text-center"><%= valuePhys.NR_META %></td>
            <td class="text-center">
              <%= valuePhys.NR_CONSTATACOES %>
              <!-- <div class="mb-3">
                <input value="" type="text" class="form-control" placeholder="12.4">
              </div> -->
            </td>
            <td class="text-center"> <%= valuePhys.NR_EVID_APRESENTA %> </td>
            <td class="text-center">
            </td>
            <td>
              <%= valuePhys.DS_JUSTIFIC %>
              <!-- <div class="mb-3">
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
              </div> -->
            </td>
            <td>
              <!-- Button trigger modal -->
              <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="Insert()">
                Editar
              </button>

              
            </td>
          </tr>
    <% }}) %>
  </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-center" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/fileupload" method="POST" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="">Arquivo</label>
            <input class="form-control" type="file" name="physycfile" id="formFileMultiple" multiple>
          </div>
          <div class="d-grid">
            <button type="submit" class="btn btn-primary">Upload</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

